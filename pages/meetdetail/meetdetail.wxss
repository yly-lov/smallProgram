/* pages/meetdetail/meetdetail.wxss */
.go_back{
  width: 100%;
  height: 140rpx;
  background: rgb(165, 80, 80);
  line-height: 140rpx;
  text-indent: 50rpx;
}
.go_back .back{
  font-size: 50rpx;
  margin-right: 20rpx;
  position:relative;
  top:8rpx;
}
.go_back .meetdetail{
  color: #ffffff;
}
/* 基本信息 */
.basicinfo{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-indent: 30rpx;
  border-bottom: 5rpx solid #ccc;
  /* margin-top:140rpx; */
  /* overflow: hidden; */
}
.basicinfo .title{
  font-size: 40rpx;
  color: rgb(175, 56, 56);
}
/* 表格样式 */
.table {
  border: 0rpx solid darkgray;
}
.tr {
  display: flex;
  width: 90%;
  min-height: 90rpx;
  border: 3rpx solid #ccc;
  border-bottom: 0;
  margin-left: 5%;
}
.tr:nth-of-type(7){
  border-bottom: 3rpx solid #ccc;
}
.tr .name{
  border-right: 3rpx solid #ccc;
  background: rgb(241, 229, 229);
}
.td {
    width:50%;
    min-height: 90rpx;
    line-height: 90rpx;
    text-indent: 60rpx;
}
/* 审议内容 */
.meet_title{
  width: 100%;
  height: 100rpx;
  margin-top: 70rpx;
  text-indent: 30rpx;
  border-bottom: 3rpx solid #ccc;
  line-height: 100rpx;
}
/* 标题会议内容 */
.contentfirst{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-indent: 25rpx;
}
.contentsecond{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-indent: 45rpx;
  color: rgb(48, 40, 40);
  font-size: 32rpx;
}
/* 附件 */
.attachmentbox{
  margin-bottom: 200rpx;
}
.attachment{
  width: 100%;
  height: 100rpx;
  margin-top: 50rpx;
  text-indent: 30rpx;
  line-height: 100rpx;
  border-bottom: 3rpx solid #ccc;
}
.documenticon{
  color:rgb(71, 71, 214);
  margin-right: 20rpx;
}
.pdficon{
  color: red;
  margin-right: 20rpx;
}
.attachmenttext{
  color: rgb(83, 83, 223);
}
.attachmentview{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
}
/* footerbar */
.nav_link{
  width: 100%;
  height: 100rpx;
  display: flex;
  position: fixed;
  bottom: 0;
}
.nav_link .nav_box{
  flex: 1;
}
.nav_link .left{
  display: flex;
  background: #ffffff;
}
.nav_link .left .left_box{
  flex:1;
  text-align: center;
  line-height: 50rpx;
}
.nav_link .right{
  text-align: center;
  background: rgb(168, 118, 23);
  color: #ffffff;
  line-height: 100rpx;
}